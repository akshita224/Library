<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Copy count</th>
      <th>Category code</th>
      <th>Category</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= book.copy_count %></td>
        <td><%= book.category_code %></td>
        <td><%= book.category_id%></td>
        <td><%= link_to 'Show', book %></td>
     

      <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %>


      
      </tr>
    <% end %>
  </tbody>
</table>

